{
  "ci": {
    "collect": {
      "startServerCommand": "bundle exec jekyll serve --port 4002",
      "url": [
        "http://localhost:4002/",
        "http://localhost:4002/about/",
        "http://localhost:4002/blog/",
        "http://localhost:4002/contact/",
        "http://localhost:4002/style-test/"
      ],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--emulated-form-factor=none --force-dark-mode"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.9, "urlPattern": "^(?!.*style-test)"}],
        "categories:accessibility": ["error", {"minScore": 1.0}],
        "categories:best-practices": ["error", {"minScore": 0.9, "urlPattern": "^(?!.*style-test)"}],
        "categories:seo": ["error", {"minScore": 0.9, "urlPattern": "^(?!.*style-test)"}],
        "categories:pwa": ["warn", {"minScore": 0.0}],
        "color-contrast": ["error", {"minScore": 1.0}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
