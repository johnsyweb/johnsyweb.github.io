{
  "ci": {
    "collect": {
      "staticDistDir": "./_site",
      "url": [
        "/style-test/",
        "/",
        "/about/",
        "/blog/",
        "/contact/"
      ],
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--emulated-form-factor=none --force-dark-mode"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.9, "urlPattern": "^(?!.*style-test)"}],
        "categories:accessibility": ["error", {"minScore": 1.0}],
        "categories:best-practices": ["error", {"minScore": 0.9, "urlPattern": "^(?!.*style-test)"}],
        "categories:seo": ["error", {"minScore": 0.9, "urlPattern": "^(?!.*style-test)"}],
        "categories:pwa": ["warn", {"minScore": 0.0}],
        "color-contrast": ["error", {"minScore": 1.0}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
