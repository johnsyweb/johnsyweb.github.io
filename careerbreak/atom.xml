---
layout: null
permalink: /careerbreak/atom.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Pete's Career Break Updates</title>
  <subtitle>{{ site.description | xml_escape }}</subtitle>
  <link href="{{ site.url }}/careerbreak/atom.xml" rel="self" type="application/atom+xml"/>
  <link href="{{ site.url }}/blog/" rel="alternate" type="text/html"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  {% assign posts = site.categories.careerbreak | sort: 'date' | reverse %}
  <icon>{{ site.url }}/icons/favicon-16x16.png</icon>
  <logo>{{ site.url }}/icons/favicon-196x196.png</logo>
  <id>{{ site.url }}/careerbreak/</id>
  {% for post in posts limit:10 %}
    <entry>
      <title>{{ post.title | xml_escape }}</title>
      <link href="{{ site.url }}{{ post.url }}" rel="alternate"/>
      <id>{{ site.url }}{{ post.url }}</id>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <summary>{{ post.excerpt | strip_html | xml_escape }}</summary>
      {% assign images_replacement = '="' | append: site.url | append: '/images/' %}
      {% assign icons_replacement = '="' | append: site.url | append: '/icons/' %}
      {% assign blog_replacement = '="' | append: site.url | append: '/blog/' %}
      {% assign contact_replacement = '="' | append: site.url | append: '/contact/' %}
      {% assign about_replacement = '="' | append: site.url | append: '/about/' %}
      {% assign absolute_content = post.content | replace: '="/images/', images_replacement | replace: '="/icons/', icons_replacement | replace: '="/blog/', blog_replacement | replace: '="/contact/', contact_replacement | replace: '="/about/', about_replacement %}
      <content type="html">{{ absolute_content | xml_escape }}</content>
      <author>
        <name>{{ site.author.name }}</name>
        <uri>{{ site.author.url }}</uri>
      </author>
      {% for cat in post.categories %}
        <category term="{{ cat | xml_escape }}"/>
      {% endfor %}
    </entry>
  {% endfor %}
</feed>